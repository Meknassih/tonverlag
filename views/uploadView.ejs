<!DOCTYPE html>
<html>

<head>
  <title>Tonverlag</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-sm">
        <a id="brandLogo">
          <h1>Tonverlag</h1>
        </a>
        <p>Upload a new track</p>
      </div>
    </div>
    <% if (locals.notification !== undefined) { %>
    <div class="row">
      <div class="col-sm">
        <div class="alert alert-<%= locals.notification.type %> alert-dismissible fade show" role="alert">
          <%= locals.notification.message %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    </div>
    <% } %>
    <div class="row">
      <div class="col-sm">
        <form id="uploadForm">
          <div class="form-group">
            <label for="exampleFormControlFile1">Select the audio file</label>
            <input type="file" class="form-control-file" id="fileInput" name="audioFile" onchange="onFileChange(event)">
          </div>
          <button class="btn btn-primary" id='btnLoad' onclick="submitTrack(event)">Submit</button>
        </form>
      </div>
    </div>
  </div>
  <div id="waveform" class="d-none"></div>
</body>
<%- include('partials/vendorscriptsView');  %>
<script src="javascripts/upload.client.js"></script>

</html>